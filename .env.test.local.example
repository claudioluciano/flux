# Environment for E2E tests with local Convex backend
# Copy this to .env.test.local and fill in the admin key

# Local Convex backend URL
CONVEX_SELF_HOSTED_URL=http://127.0.0.1:3210

# Admin key - generate with: docker compose exec backend ./generate_admin_key.sh
CONVEX_SELF_HOSTED_ADMIN_KEY=your_admin_key_here

# Site URL for the app
NEXT_PUBLIC_CONVEX_URL=http://127.0.0.1:3210
NEXT_PUBLIC_CONVEX_SITE_URL=http://127.0.0.1:3211
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Enable test mode for Convex functions
IS_TEST=true
